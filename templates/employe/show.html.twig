{% extends 'base.html.twig' %}

{% block title %}Détails d'une employé{% endblock %}

{% block body %}

   <h1>Détail d'une employé</h1>

   <h2>{{ employe }}</h2>

   <p>

    Entreprise : <a href="{{ path('show_entreprise', {'id': employe.entreprise.id})}}">{{employe.entreprise}} </a><br>
    Ville : {% if employe.ville %} {{ employe.ville }} {% else %} Ville non renseignée {% endif %}<br>
    Date de naissance : {{ employe.dateNaissance | date("m-d-Y") }}<br>
    Age : {{employe.age}} <br>
    Date d'embauche : {{ employe.dateEmbauche | date("m-d-Y") }}

   </p>

{% endblock %}